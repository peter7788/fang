<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="model.Message" table="Message">
		<comment>留言信息</comment>
		<!-- id必须放在第一位 -->
		<id name="id" type="java.lang.Integer">
			<column name="id"/>
			<generator class="native"/>
		</id>
		<property name="user_name" type="java.lang.String">
			<column name="user_name" length="50" not-null="true">
				<comment>用户名称</comment>
			</column>
		</property>
		<property name="message_time" type="java.sql.Date">
			<column name="message_time" length="50" not-null="true">
				<comment>留言时间</comment>
			</column>
		</property>
		<property name="user_email" type="java.lang.String">
			<column name="user_email" length="50" not-null="true">
				<comment>电子邮箱</comment>
			</column>
		</property>
		<property name="user_phone" type="java.lang.String">
			<column name="user_phone" length="20" not-null="true">
				<comment>移动电话</comment>
			</column>
		</property>
		<property name="content" type="java.lang.String">
			<column name="content" length="255" not-null="true">
				<comment>移动电话</comment>
			</column>
		</property>
	</class>
</hibernate-mapping>
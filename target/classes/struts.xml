<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>

	<constant name="struts.multipart.parser" value="jakarta"/>
	<constant name="struts.multipart.saveDir" value="D:\\tmp"/>

	<package name="HouseInfoController" extends="struts-default">
		<action name="search" class="action.HouseInfoController" method="search">
			<result name="success">/test.jsp</result>
		</action>
		<action name="addHouseInfo" class="action.HouseInfoController" method="addHouseInfo">
			<param name="savePath">uploadFiles</param>
			<result name="new">/manage_newest_project.jsp</result>
			<result name="hot">/manage_hotest_project.jsp</result>
		</action>
	</package>
	
	<package name="MessageController" extends="struts-default">
		<action name="addMessage" class="action.MessageController" method="addMessage">
			<result name="success">/index.html</result>
		</action>
	</package>
	
	<package name="GuestController" extends="struts-default">
		<action name="login" class="action.GuestController" method="login">
			<result name="success">/manage_newest_project.jsp</result>
			<result name="error">/login.html</result>
		</action>
		<action name="logout" class="action.GuestController" method="logout">
			<result name="success">/login.html</result>
			<result name="error">/login.html</result>
		</action>
	</package>
	
	<package name="ChangePasswordController" extends="struts-default">
		<action name="changePassword" class="action.ChangePasswordController" method="changePassword">
			<result name="success">/manage_newest_project.jsp</result>
			<result name="error">/manage_hotest_project.jsp</result>
		</action>
	</package>
	
	<package name="UploadController" extends="struts-default">
		<!-- 上传图片 -->
		<action name="upload" class="action.UploadController" method="upload">
			<param name="savePath">uploadFiles</param>
			<result name="success">/manage_hotest_project.jsp</result>
		</action>
	</package>
</struts>    

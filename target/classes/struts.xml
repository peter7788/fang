<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>

	<constant name="struts.multipart.parser" value="jakarta"/>
	<constant name="struts.multipart.saveDir" value="D:\\tmp"/>

	<!-- HouseInfoController相关action -->
	<package name="HouseInfoController" extends="struts-default">
		<action name="search" class="action.HouseInfoController" method="search">
			<result name="success">/test.jsp</result>
		</action>
	</package>
	
	<package name="MessageController" extends="struts-default">
		<action name="addMessage" class="action.MessageController" method="addMessage">
			<!-- 1、此处跳转页面只供测试使用 -->
			<result name="success">/index.html</result>
		</action>
		<!-- 查看留言信息 -->
		<action name="searchMessage" class="action.MessageController" method="searchMessage">
			<result name="success">/message.html</result>
		</action>
	</package>
	
	<package name="UploadController" extends="struts-default">
		<!-- 上传图片 -->
		<action name="upload" class="action.UploadController" method="upload">
			<param name="savePath">/uploadFiles</param>
			<result name="success">/manage_hotest_project.jsp</result>
		</action>
	</package>
</struts>    
